<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProfileTextStyle" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileCollapsedTextStyle" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ProfileTabTextStyle" parent="android:TextAppearance.Widget.TabWidget" >
        <item name="fontFamily">@font/sf_medium</item>
        <item name="android:textColor">#EBEBF5</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ClickNGoNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:statusBarColor">@color/black</item>
    </style>



    <style name="TextInputLayoutClickNGo" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:maxLines">1</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/selected</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonClickNGoStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/selected</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:width">200dp</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Option">
        <item name="height">80dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Option.OptionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Option.OptionDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/option_text_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Result">

    </style>

    <style name="Result.ResultDetails">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="Result.ResultTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Result.ResultDescription">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <!-- Search style -->

    <style name="Search">

    </style>

    <style name="Search.Question">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>