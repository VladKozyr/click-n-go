<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Option">
        <item name="height">80dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Option.OptionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Option.OptionDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/option_text_selector</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>