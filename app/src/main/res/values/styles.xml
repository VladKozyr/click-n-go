<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextInputLayoutClickNGo" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:maxLines">1</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/selected</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonClickNGoStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/selected</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:width">200dp</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>